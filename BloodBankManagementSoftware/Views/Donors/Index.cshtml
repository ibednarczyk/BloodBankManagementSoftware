@model BloodBankManagementSoftware.Models.BloodGroupViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<form asp-controller="Donors" asp-action="Index" method="get">
    <p>
        <select asp-for="BloodGroup" asp-items="Model.BloodGroups">
            <option value="">All</option>
        </select>

        Name: <input type="text" name="searchedName" />
        <input type="submit" value="Filter" />
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Donors[0].RequestId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Donors[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Donors[0].Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Donors[0].PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Donors[0].BloodGroup)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Donors[0].RhFactorType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Donors[0].EMailAddress)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Donors) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RequestId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BloodGroup)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RhFactorType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EMailAddress)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
